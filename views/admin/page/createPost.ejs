<% layout('admin/layout') -%>
<link rel="stylesheet" href="../../../public/css/avatar.css">

<div>
  <form method="POST" action="/post/create" enctype="multipart/form-data" id="form-create">
    <div class="card-body">
      <div class="form-group" >
        <label for="title">Title</label>
        <input type="text" class="form-control" id="title" name="title" rules="required" placeholder="Enter title">
        <span class="form-message"></span>
      </div>
      <div class="form-group">
        <label for="description">Description</label>
        <input type="text" class="form-control" id="description" rules="required" name="description" placeholder="Enter description">
        <span class="form-message"></span>
      </div>
      
      <div class="form-group">
        <label for="content">Content</label>
        <textarea class="form-control" rows="15" name="content" id="editor" placeholder="Write your content ...."></textarea>
        <span class="form-message"></span>
      </div>

    
      <div class="form-group">
        <label for="image" class="col-sm-2 col-form-label">Image</label>
        <div class="ml-auto mr-auto img-fluid">
          <div class="profile-pic ml-auto mr-auto">
            <label class="-label" for="file">
            <span class="glyphicon glyphicon-camera"></span>
            <span>Change image</span>
            </label>
          <input id="file" type="file" name="image" onchange="loadFile(event)"/>
          <img src="../../../public/upload/avatar.jpg" id="output" name="image"></div>
        </div>
      </div>
    <!-- /.card-body -->

    <div class="card-footer">
      <button type="submit" class="btn btn-primary">Submit</button>
    </div>
  </form>
</div>
 <script>
  var loadFile = function(event) {
	var image = document.getElementById('output');
	image.src = URL.createObjectURL(event.target.files[0]);
};
 </script>
<script src="../../../public/client/js/validator.js"></script>
<script>
    Validator('#form-create')
</script>
<script src="/public/ckeditor/ckeditor.js"></script>

<script>
  CKEDITOR.replace('editor', {
    extraPlugins:'filebrowser',
        filebrowserBrowseUrl:'/list',//upload location
        filebrowserUploadMethod:'form',
        filebrowserUploadUrl:'/upload'//route
  })
</script>