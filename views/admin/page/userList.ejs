<% layout('admin/layout') -%>
    <!-- Default box -->
    <div class="card">
      <div class="card-body p-0">
        <table class="table table-striped projects">
            <thead>
                <tr>
                    <th style="width: 1%">
                        #
                    </th>
                    <th style="width: 25%">
                        User Name
                    </th>
                    <th style="width: 20%">
                        Total Posts
                    </th>
                    <th>
                        Lastest Post
                    </th>
                    <th style="width: 8%" class="text-center">
                        Role
                    </th>
                    <th style="width: 20%">
                    </th>
                </tr>
            </thead>
           <tbody>
            <% admin.forEach(function(admin) { %>
            <tr>
                <td>
                    #
                </td>
                <td>
                    <h1>
                        <%= admin.name %>
                    </h1>
                    <br/>
                    <small>
                        <%= admin.createdAt %>
                    </small>
                </td>
                <td>
                  <h1> <%= admin.posts.length + " " + "posts" %>  </h1> 
                </td>
                <td > <% if(admin.posts.length > 0) { %>
                    <div>
                        <span><H1 > <%= admin.posts.slice(-1)[0].title %></H1></span>
                    </div>
                <% } else { %>
                <% } %>
                   
                </td>
                <td class="project-state">
                    <!-- <span class="badge badge-success"></span> -->
                    <div class="external-event bg-success ui-draggable ui-draggable-handle" style="position: relative;"><%= admin.role %></div>
                </td>
                <td class="project-actions text-right">
                    <!-- <a class="btn btn-primary btn-sm" href="admin/editUser/<%= admin._id %>">
                        <i class="fas fa-folder">
                        </i>
                        Ban??
                    </a> -->
                    <a class="btn btn-info btn-sm" href="/admin/editUser/<%= admin._id %>">
                        <i class="fas fa-pencil-alt">
                        </i>
                        Edit
                    </a>
                    <a class="btn btn-danger btn-sm" href="/admin/delete/<%= admin._id %>">
                        <i class="fas fa-trash">
                        </i>
                        Delete
                    </a>
                </td>
            </tr>
            <% }); %>
           </tbody>
        </table>
      </div>
      <!-- /.card-body -->
    </div>
    <!-- /.card -->